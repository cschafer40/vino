<div class="page-header">
  <h3><%= @wine.brand %> <%= @wine.style_grape %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

      <dt>Label</dt>
      <dd><img src="<%= @wine.label %>" class="img-thumbnail"></dd>

      <dt>Brand</dt>
      <dd><%= @wine.brand %></dd>

      <dt>Style/Grape</dt>
      <dd><%= @wine.style_grape %></dd>

      <dt>Rating</dt>
      <dd><%= @wine.rating %></dd>

      <dt>Description</dt>
      <dd><%= @wine.description %></dd>

      <dt>Buy At</dt>
      <dd><%= @wine.store %></dd>

      <dt>Price</dt>
      <dd><%= @wine.price %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/wines" class="btn btn-primary">
        Back
      </a>
      <a href="/wines/<%= @wine.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_wine/<%= @wine.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

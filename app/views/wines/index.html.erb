<div class="page-header">
  <h1>
    Wines
    <a href="/wines/new" class="btn btn-default">Add a Favorite Wine</a>
  </h1>
</div>

<div class="form-group">
  <%= search_form_for @q do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :brand_or_style_grape_cont, "Search for a wine" %>
    <%= f.text_field :brand_or_style_grape_cont, :class => "form-control", :placeholder => "Start typing a brand or style/grape" %>
  </div>

  <div class="form-group">
    <%= f.label :rating_gteq, "Rating greater than" %>
    <%= f.text_field :rating_gteq, :class => "form-control", :placeholder => "Rating greater than or equal to" %>
  </div>


  <div class="form-group">
    <%= f.label :store_cont, "Buy at" %>
    <%= f.text_field :store_cont, :class => "form-control", :placeholder => "Enter store name" %>
  </div>


  <%= f.submit :class => "btn btn-info btn-block" %>

  <a href="/wines" class="btn btn-default btn-block">Clear filters</a>
  <% end %>
</div>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Label</th>
        <th>Brand</th>
        <th>Style/Grape</th>
        <th>Rating</th>

        <th>Actions</th>
      </tr>

      <% @wines.each do |wine| %>
      <tr>
        <td><img src="<%= wine.label %>" class="img-thumbnail"></td>
        <td><%= wine.brand %></td>
        <td><%= wine.style_grape %></td>
        <td><%= wine.rating %></td>

        <td>
          <a href="/wines/<%= wine.id %>" class="btn btn-primary">Show</a>
          <a href="/wines/<%= wine.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_wine/<%= wine.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
